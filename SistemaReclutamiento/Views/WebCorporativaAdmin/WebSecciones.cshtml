<!--Modal Elemnto-->
<div class="modal fade" tabindex="-1" id="modalFormularioElemento" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header blackheader">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"><span id="tituloModalElemento"></span> Elemento</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form class="" id="form_elemento">
                        <input type="hidden" name="elem_id" id="elem_id" value="" />
                        <input type="hidden" name="elem_orden" id="elem_orden" value="" />
                        <input type="hidden" name="fk_menu" id="fk_menu" value="" />
                        <div class="col-md-12 col-xs-12" id="div_tipo_elemento">
                            <div class="form-group" id="div_fk_tipo_elemento">
                                <label>Tipo de Elemento</label>
                                <select class="form-control" name="fk_tipo_elemento" id="fk_tipo_elemento">
                                    <option value="">Tipo de Elemento</option>
                                </select>

                            </div>
                            <div class="form-group" id="div_texto_fk_tipo_elemento">
                                <label>Tipo de Elemento</label>
                                <div class="form-control" id="texto_fk_tipo_elemento"></div>
                            </div>
                        </div>

                        <div class="col-md-12 col-xs-12 contenido_elemento">
                            <div class="form-group">
                                <label id="parrafo_elemento">Texto</label>
                                <div id="contenido_input">
                                    <input type="text" name="elem_contenido" id="elem_contenido" class="form-control" placeholder="Texto" />

                                </div>

                            </div>
                        </div>

                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label>Estado</label>
                                <select class="form-control" name="elem_estado" id="elem_estado">
                                    <option value="A" selected>Activo</option>
                                    <option value="I">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn_guardar_elemento btn-primary"><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal Elemento-->
<!-- Inicio Modal Detalle Elemento -->
<div class="modal fade" tabindex="-1" id="modalFormularioDetalleElemento" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header blackheader">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"><span id="tituloModalDetalleElemento"></span> Detalle Elemento</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form class="" id="form_detalle_elemento" method="post">
                        <input type="hidden" name="fk_elemento" id="fk_elemento" value="" />
                        <input type="hidden" name="detel_id" id="detel_id" value="" />
                        <input type="hidden" name="detel_orden" id="detel_orden" value="" />
                        <input type="hidden" name="detel_nombre_imagen" id="detel_nombre_imagen" value="">
                        <input type="hidden" name="detel_nombre_imagen_detalle" id="detel_nombre_imagen_detalle" value="">
                        <input type="hidden" name="fk_tipo" id="fk_tipo" value="" />

                        <div class="col-md-12 col-xs-12 detel-titulo">
                            <div class="form-group">
                                <label id="contenido_detalleelemento">Titulo</label>
                                <div id="div_titulo_detalleelemento">
                                    <input type="text" name="detel_titulo" id="detel_titulo" class="form-control" placeholder="Texto" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12 detel-subtitulo">
                            <div class="form-group">
                                <label id="subtitulo_detalleelemento">Subitulo</label>
                                <div id="div_subtitulo_detalleelemento">
                                    <input type="text" name="detel_subtitulo" id="detel_subtitulo" class="form-control" placeholder="Texto" />
                                </div>
                               
                            </div>
                        </div>

                        <div class="col-md-12 col-xs-12 detel-parrafo">
                            <div class="form-group">
                                <label id="parrafo_detalleelemento">Texto</label>
                                <div id="div_parrafo_detalleelemento">
                                    <input type="text" name="detel_parrafo" id="detel_parrafo" class="form-control" placeholder="Texto" />
                                </div>
                            </div>
                        </div>
                        <!---Imagen del detalle-->
                        <div class="col-md-12 col-xs-12 detel-imagen">
                            <div class="form-group">
                                <label>Imagen</label>
                                <label class="btn btn-warning" for="detel_imagen">
                                    <span id="spandetel"><i class="fa fa-upload"></i>  Subir Icono</span>
                                    <input id="detel_imagen" name="detel_imagen" type="file" class="form-control" style="display:none;" />
                                </label>
                            </div>
                        </div>
                        <div class="col-md-12" style="display:none" id="divdetel">
                            <div class="col-md-4 col-lg-offset-3 col-xs-12 attachment" style="border: 0px solid black;padding: 5px;text-align: center;">
                                <label class="col-md-12 col-xs-12">Imagen Actual</label>
                                <a id="frm_detel" href="#" class="atch-thumb" style="width:100%;">
                                    <img id="icono_actual_detel" style="width:100px;height:100px" />
                                    <div class="file-name" style="width:100%;text-align:left;"><i class="fa fa-file"></i> <span id="detel_nombre_imagen_modal"></span></div>
                                </a>
                            </div>
                        </div>
                        <!--segunda imagen-->
                        <div class="col-md-12 col-xs-12 detel-imagen-detalle">
                            <div class="form-group">
                                <label>Adjuntar Detalle Imagen</label>
                                <label class="btn btn-warning" for="detel_imagen_detalle">
                                    <span id="spandetel_detalle"><i class="fa fa-upload"></i>  Subir Detalle</span>
                                    <input id="detel_imagen_detalle" name="detel_imagen_detalle" type="file" class="form-control" style="display:none;" />
                                </label>
                            </div>
                        </div>
                        <div class="col-md-12" style="display:none" id="divdetel_detalle">
                           
                            <div class="col-md-4 col-lg-offset-3 col-xs-12 attachment" style="border: 0px solid black;padding: 5px;text-align: center;">
                                <label class="col-md-12 col-xs-12">Icono Actual</label>
                                <a id="frm_detel_detalle" href="#" class="atch-thumb" style="width:100%;">
                                    <img id="icono_actual_detel_detalle" style="width:100px;height:100px"/>
                                    <div class="file-name" style="width:100%;text-align:left;"><i class="fa fa-file"></i> <span id="detel_nombre_imagen_detalle_modal"></span></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            <div class="form-group">
                                <label>Estado</label>
                                <select class="form-control" name="detel_estado" id="detel_estado">
                                    <option value="A" selected>Activo</option>
                                    <option value="I">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn_guardar_detalle_elemento btn-primary"><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal Detalle Elemento -->
