
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSuper.cshtml";

}

@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@{
    String menu = new JavaScriptSerializer().Serialize(ViewBag.Menu);
}
<script type="text/javascript">
    menu= (@Html.Raw(menu));
</script>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="fa fa-edit"></i> <small>Mantenimientos Sub Menus</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @* Formulario *@
                <form id="frmSubMenu-form" class="" method="post">
                    <div class="col-md-12 col-xs-12">


                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Agregar Submenu
                            </div>
                            <div class="panel-body">
                                <input type="hidden" name="fk_menu" id="fk_menu" />
                                <div class="col-md-4 col-xs-12">
                                    <div class="form-group">
                                        <label>Descripcion</label>
                                        <input type="text" name="snu_descripcion" id="snu_descripcion" class="form-control" placeholder="Descripcion" />
                                    </div>
                                </div>

                                <div class="col-md-4 col-xs-12">
                                    <div class="form-group">
                                        <label>Icono</label>
                                        <input type="text" name="snu_icono" id="snu_icono" class="form-control" placeholder="Icono" />
                                    </div>
                                </div>
                                <div class="col-md-4 col-xs-12">
                                    <div class="form-group">
                                        <label>URL</label>
                                        <input type="text" name="snu_url" id="snu_url" class="form-control" placeholder="URL" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12" style="margin-bottom:10px;">
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-danger col-xs-12 btn_guardar"><i class="fa fa-save"></i> Guardar</button>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-primary col-xs-12 btn_cancelar"><i class="fa fa-ban"></i> Cancelar</button>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-success col-xs-12 btn_atras"><i class="fa fa-arrow-left"></i> Regresar</button>
                            </div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            <div class="ln_solid"></div>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            <div class="container">
                                <table id="SubMenu-table" class="table table-bordered table-condensed table-hover">
                                    <thead>
                                        <tr>
                                            <th width="32%">Descripción</th>
                                            <th width="20%">Ícono</th>
                                            <th width="30%">URL</th>
                                            <th width="20%">Estado</th>
                                            <th width="25%">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody_SubMenu"></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

        </div>
        <div class="container">
            <!-- Basic datatable -->
            <div class="card">
                <div class="card-body">
                    <table class="table table-xs table-bordered" id="tablepermiso"></table>
                </div>
            </div>
            <!-- /basic datatable -->
        </div>
    </div>
</div>

<!--Final-->
@section js
{
    <script src="~/Content/viewjs/Desarrollo/CrearSubMenusJs.js"></script>
}


