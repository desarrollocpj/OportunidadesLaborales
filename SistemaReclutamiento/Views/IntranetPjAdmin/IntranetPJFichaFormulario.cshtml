                                <div class="input-group">
                                    <span class="input-group-addon">
                                        Codigo
                                    </span>
                                    <input type="text" name="desde" id="txt-codigo" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        DNI
                                    </span>
                                    <input type="text" name="desde" id="txt-dni" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <hr />
                    </div>
                    <div class="col-md-12" style="margin-top:15px;">
