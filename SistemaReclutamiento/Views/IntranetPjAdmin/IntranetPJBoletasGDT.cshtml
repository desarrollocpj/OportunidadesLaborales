
@{
    Layout = "~/Views/Shared/_LayoutIntranetPJAdmin.cshtml";
}
@section AddToHead
{
    <link href="~/Content/intranetSGC/jqueryztree/css/demo.css" rel="stylesheet" />
    <link href="~/Content/intranetSGC/jqueryztree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
}
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Inicio</a>
        </li>
        <li class="active">Panel Boletas GDT</li>
    </ul><!-- /.breadcrumb -->
</div>
<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable" style="margin-left:10px;margin-top:10px;">
                <ul class="nav nav-tabs" id="myTab3">
                    <li class="active">
                        <a data-toggle="tab" href="#tab1" data-tab="tab1">
                            <i class="orange ace-icon fa fa-tachometer bigger-110"></i>
                            Procesar PDF
                        </a>
                    </li>

                    <li>
                        <a data-toggle="tab" href="#tab2" data-tab="tab2" data-tipoconfiguracion="PATH">
                            <i class="red ace-icon fa fa-envelope bigger-110"></i>
                            Creación de Directorios
                        </a>
                    </li>

                    <li>
                        <a data-toggle="tab" href="#tab3" data-tab="tab3">
                            <i class="green ace-icon fa fa-linkedin-square bigger-110"></i>
                            Envío PDFs
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#tab4" data-tab="tab4">
                            <i class="green ace-icon fa fa-linkedin-square bigger-110"></i>
                            Bitácora
                        </a>
                    </li>

                </ul>

                <div class="tab-content">
                    <div id="tab1" class="tab-pane in active">
                        <div class="row">
                            <form id="formProcesarPdf">
                                <input type="hidden" name="nombreEmpresa" value="" id="nombreEmpresa" />
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Empresa
                                            </span>
                                            <select class="form-control input-sm" name="empresa" id="cboEmpresa"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Fecha
                                            </span>
                                            <input type="text" name="fechaProcesoPdf" id="fechaProcesoPdf" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-white btn-primary btn-block btn-round btnProcesarPdf" data-rel="tooltip" title="ProcesarPdf">
                                            <i class="ace-icon glyphicon glyphicon-list-alt"></i> Procesar PDF
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="col-md-12 col-xs-12">
                                <div class="row">
                                    <div class="table-responsive" id="contenedorTablaProcesoPdf">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div id="tab2" class="tab-pane">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="alert alert-warning" style="margin-left:10px">
                                        Creacion de Directorios GDT
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    Año
                                                </span>
                                                <input type="text" name="anioCreacion" id="anioCreacion" class="form-control input-sm" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <button class="btn btn-white btn-warning btn-sm btn-block btn-round btnCrearDirectorio" data-id="1" data-rel="tooltip" title="Crear">
                                                <i class="ace-icon glyphicon glyphicon-list-alt"></i> Crear
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="widget-box">
                                    <div class="widget-header widget-header-flat widget-header-small">
                                        <h5 class="widget-title">
                                            <i class="ace-icon fa fa-signal"></i>
                                            Configuracion
                                        </h5>
                                        <div class="widget-toolbar">
                                            <a href="#" class="btn btn-minier btnGuardarPathPrincipal btn-primary" data-action="settings"><i class="fa fa-save"></i> Guardar Path</a>
                                        </div>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <div class="row">
                                                <form class="" id="formPathPrincipal">
                                                    <input type="hidden" name="config_id" value="" id="config_id" />
                                                    <input type="hidden" name="config_tipo" value="PATH" id="config_tipo" />
                                                    <input type="hidden" name="config_estado" value="1" id="config_estado" />
                                                    <div class="col-md-12 col-xs-12">
                                                        <div class="form-group">
                                                            <label>Descripción</label>
                                                            <input type="text" name="config_descripcion" id="config_descripcion" class="form-control input-sm" placeholder="Descripcion" value="Path raiz para creacion de directorios" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 col-xs-12">
                                                        <div class="form-group">
                                                            <label>Path</label>
                                                            <input type="text" name="config_valor" id="config_valor" class="form-control input-sm" placeholder="C:/BoletasGDT/" value="C:/BoletasGDT/" />
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>

                                        </div><!-- /.widget-main -->
                                    </div><!-- /.widget-body -->
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12">
                                <div class="row">
                                    <div id="mostrarArbolDirectorios" style="display:none;padding-left:10px;padding-right:10px" align="center">
                                        <h3>Arbol de Directorios</h3>
                                        <ul id="treeDemo2" class="ztree" style="width:100%"></ul>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="tab3" class="tab-pane">
                        <div class="row">
                            <form id="formListarPfds">
                                <input type="hidden" name="nombreEmpresaListar" value="" id="nombreEmpresaListar" />
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Empresa
                                            </span>
                                            <select class="form-control input-sm" name="empresaListar" id="cboEmpresaListar" style="width:100%"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Fecha
                                            </span>
                                            <input type="text" name="fechaListar" id="fechaListar" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-white btn-primary btn-block btn-round btnListarData" data-rel="tooltip" title="Listar">
                                            <i class="ace-icon glyphicon glyphicon-list-alt"></i> Listar
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="col-md-12" style="display:none" id="divEnvioPDFs">
                                <div class="form-group">
                                    <button class="btn btn-white btn-success btn-block btn-round btnEnviarPDFs" data-rel="tooltip" title="Enviar Correos">
                                        <i class="ace-icon glyphicon glyphicon-list-alt"></i> Enviar Correos
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12">
                                <div class="row">
                                    <div class="table-responsive" id="contenedorTablaListar">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="tab4" class="tab-pane">
                        <div class="row">
                            <form id="formListarBitacora">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Fecha Inicio
                                            </span>
                                            <input type="text" name="fechaInicio" id="fechaInicio" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Fecha Fin
                                            </span>
                                            <input type="text" name="fechaFin" id="fechaFin" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-white btn-danger btn-block btn-round btnListarBitacora" data-rel="tooltip" title="Listar">
                                            <i class="ace-icon glyphicon glyphicon-list-alt"></i> Listar
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="col-md-12 col-xs-12">
                                <div class="row">
                                    <div class="table-responsive" id="contenedorTablaBitacora">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div><!-- /.page-content -->
<div class="modal fade" tabindex="-1" id="modalBoleta" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header blackheader">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="nf"><span id="tituloModalActividades"></span> Boleta</h4>
            </div>
            <div class="modal-body" id="">
                <div class="row">
                    <div id="contenidoBoletaPdf" style="width:100%;height:500px"></div>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
@*PROGRESS BAR MODAL*@
<div class="modal fade in" id="mod-progress" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="i-circle warning"><i class="fa fa-info"></i></div>
                    <div id="result" style="font-size: 1.1em; padding-bottom: 5px">
                        <p id="progressBarParagraph"></p>
                    </div>
                    <div style="width: 30%; margin: 0 auto; display:none;">
                        <div id="progressbar" style="width: 300px; height: 15px"></div>
                        <br />
                    </div>
                    <div id="ProgressStripe" class="progress progress-striped active" style="position:relative; top:10px; width:100%;">
                        <div id="ProgressMessage" class="progress-bar progress-bar-info" style="width: 100%; border:none;"></div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section js
{
    <script src="~/Content/intranetSGC/jqueryztree/js/jquery.ztree.core.js"></script>
    <script src="~/Content/viewjs/IntranetPJAdmin/IntranetPJBoletasGDT.js"></script>
}
