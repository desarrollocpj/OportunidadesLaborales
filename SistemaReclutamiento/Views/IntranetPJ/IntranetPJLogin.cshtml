
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LoginIntranetPJ.cshtml";
}

@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls

<div class="wrap">
    <!-- TOGGLE -->
    <div id="toggle-wrap">
        <div id="toggle-terms">
            <div id="cross">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- SLIDER -->
    <div class="content" style="text-align: center;">
        <!-- LOGO -->
        <div class="centrar">
            <div class="logo">
                <a href="#"><img src="~/Content/images/LOGOPJ.png" alt=""></a>
            </div>
        </div>

        <!-- SLIDESHOW -->
        <div id="slideshow">
            <div class="one">
                <h2><span>Acceso Intranet</span></h2>
            </div>
            <div class="two">
                <h2><span>Acceso Intranet </span></h2>
            </div>
            <div class="three">
                <h2><span>Acceso Intranet </span></h2>
            </div>
            <div class="four">
                <h2><span>Acceso Intranet</span></h2>
            </div>
        </div>
    </div>
    <!-- LOGIN FORM -->
    <div class="user">
        <div class="form-wrap">
            <!-- TABS -->
            <div class="tabs">
                <h3 class="login-tab"><a class="log-in active" href="#login-tab-content"><span>LOGIN</span></a></h3>
            </div>
            <!-- TABS CONTENT -->
            <div class="tabs-content">
                <!-- TABS CONTENT LOGIN -->
                <div id="login-tab-content" style="margin-top: 3em;" class="active">
                    <form id="login-form" class="login-form" action="" method="post">

                        <div class="form-group has-feedback">
                            <i class="fa fa-user form-control-feedback"></i>
                            <input type="text" class="input" id="usu_login" name="usu_login" autocomplete="off" placeholder="Usuario">
                        </div>

                        <div class="form-group has-feedback">
                            <i class="fa fa-lock form-control-feedback"></i>
                            <input type="password" class="input" id="usu_password" name="usu_password" autocomplete="off" placeholder="Contraseña">
                        </div>

                        <button type="button" class="button btn_ingresar">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/viewjs/IntranetPJ/IntranetPJLoginView.js"></script>
}
