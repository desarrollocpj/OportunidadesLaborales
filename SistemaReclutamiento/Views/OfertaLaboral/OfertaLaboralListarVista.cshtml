@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@using SistemaReclutamiento.Utilitarios;
@{
    String persona = new JavaScriptSerializer().Serialize(Session["per_full"]);
    String ubigeo = new JavaScriptSerializer().Serialize(Session["ubigeo"]);
    String postulante = new JavaScriptSerializer().Serialize(Session["postulante"]);
    String usuario = new JavaScriptSerializer().Serialize(Session["usu_full"]);
    String rutaImage = new JavaScriptSerializer().Serialize(Session["rutaPerfil"]);
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <div class="" role="tabpanel">
                <ul id="datosPersonales_ul" class="nav nav-tabs bar_tabs hidden-xs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#datosPersonales_tab" role="tab" data-toggle="tab" aria-expanded="true">Ofertas Laborales</a>
                    </li>
                    <li class="pull-right">
                        <button type="button" class="btn btn-danger btn_filtrar"><i class="fa fa-save"></i> Filtrar</button>
                        <button class="btn btn-primary btn_cancelar" type="button"><i class="fa fa-ban"></i> Cancelar</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade active in" id="datosPersonales_tab" aria-labelledby="datosPersonales_tab">

                        <form id="frmOfertaLaboral-form" class="" method="post">
                            <div class="col-md-12 col-xs-12" style="padding-top:10px;">
                                <div class="col-md-12 col-sm-12 col-xs-12 visible-xs" style="margin-bottom:10px;">
                                    <div class="col-xs-6">
                                        <button type="button" class="btn btn-danger col-xs-12 btn_filtrar"><i class="fa fa-save"></i> Filtrar</button>
                                    </div>
                                    <div class="col-xs-6">
                                        <button type="button" class="btn btn-primary col-xs-12 btn_cancelar"><i class="fa fa-ban"></i> Cancelar</button>
                                    </div>
                                </div>

                                <div class="col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <label>Nombre del Puesto</label>
                                        <input type="text" name="ola_nombre" id="ola_nombre" class="form-control" placeholder="Nombre " />
                                    </div>
                                </div>

                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Empresa</label>
                                        <select class="form-control" name="ola_cod_empresa" id="cbocodEmpresa" style="width:100%">
                                            <option value="">Seleccione</option>
                                            <option value="22">Wild Gaming</option>
                                            <option value="04">Software 3000</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Cargo</label>
                                        <select class="form-control" name="ola_cod_cargo" id="cbocodCargo" style="width:100%">
                                            <option value="">Seleccione</option>
                                            <option value="001">Anfitrion(A)</option>
                                            <option value="004">Cajero(A)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Pais</label>
                                        <select class="form-control" name="ubi_pais_id" id="cboPais" style="width:100%">
                                            <option value="">PAIS</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Departamento</label>
                                        <select class="form-control" name="ubi_departamento_id" id="cboDepartamento" style="width:100%">
                                            <option value="">DEPARTAMENTO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Provincia</label>
                                        <select class="form-control" name="ubi_provincia_id" id="cboProvincia" style="width:100%">
                                            <option value="">PROVINCIA</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3 col-xs-12">
                                    <div class="form-group">
                                        <label>Distrito</label>
                                        <select class="form-control" name="ubi_distrito_id" id="cboDistrito" style="width:100%">
                                            <option value="">DISTRITO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                        </form>
                        <div class="col-md-12 col-xs-12">
                            <div class="ln_solid">

                            </div>

                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12" id="ofertasContenido">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="col-md-4 col-xs-12" id="printcard">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


