    <!-- LOGIN FORM -->
    <div class="user">
        <!-- ACTIONS
        <div class="actions">
            <a class="help" href="#signup-tab-content">Sign Up</a><a class="faq" href="#login-tab-content">Login</a>
        </div>
        -->
        <div class="form-wrap">
            <!-- TABS -->
            <div class="tabs">
                <h3 class="login-tab"><a class="log-in active" href="#login-tab-content"><span>LOGIN</span></a></h3>
                <h3 class="signup-tab"><a class="sign-up" href="#signup-tab-content"><span>REGISTRO</span></a></h3>
            </div>
            <!-- TABS CONTENT -->
            <div class="tabs-content">
                <!-- TABS CONTENT LOGIN -->
                <div id="login-tab-content" style="margin-top: 3em;" class="active">
                    <form id="login-form" class="login-form" action="" method="post">

                        <div class="form-group has-feedback">
                            <i class="fa fa-user form-control-feedback"></i>
                            <input type="text" class="input" id="usu_login" name="usu_login" autocomplete="off" placeholder="Correo">
                        </div>

                        <div class="form-group has-feedback">
                            <i class="fa fa-lock form-control-feedback"></i>
                            <input type="password" class="input" id="usu_password" name="usu_password" autocomplete="off" placeholder="Contraseña">
                        </div>

                        <button type="button" class="button btn_ingresar">Ingresar</button>
                    </form>
                    <div class="help-action">
                        <p><i class="fa fa-arrow-left" aria-hidden="true"></i><a class="forgot" href="#"><h5>Olvidaste tu Contraseña?</h5></a></p>
                    </div>
                </div>
                <!-- TABS CONTENT SIGNUP -->
                <div id="signup-tab-content">
                    @*@{
                        var _with1 = System.Web.HttpContext.Current.Request;
                        string cadena = _with1.Url.Scheme + "://" + _with1.Url.Host + _with1.ApplicationPath;
                    }
                    <h1>@cadena</h1>
                    <h1>@Request.Url.Scheme://@((Request.Url.Authority + Request.ApplicationPath).TrimEnd('/'))/</h1>*@
                    <form id="registro-form" class="signup-form" action="" method="post">
                        <input type="hidden" name="busqueda" id="busqueda" />
                        <select class="input" name="per_tipodoc" id="per_tipodoc">
                            <option value=""> Seleccione Documento</option>
                            <option value="DNI">DNI</option>
                            <option value="Carné de Extranjeria">Carné de Extranjeria</option>
                            <option value="Otros">Otros</option>
                        </select>
                        <input type="text" class="input" id="per_numdoc" name="per_numdoc" autocomplete="off" placeholder="Nro Documento">
                        <input type="text" class="input" id="per_nombre" name="per_nombre" autocomplete="off" placeholder="Nombre">
                        <input type="text" class="input" id="per_apellido_pat" name="per_apellido_pat" autocomplete="off" placeholder="Apellido Paterno">
                        <input type="text" class="input" id="per_apellido_mat" name="per_apellido_mat" autocomplete="off" placeholder="Apellido Materno">
                        <input type="email" class="input" id="per_correoelectronico" name="per_correoelectronico" autocomplete="off" placeholder="Correo">
                        <button type="button" class="button btn_registrar">Registrar</button>
                    </form>
                    <div class="help-action">
                        <h5>Al hacer clic en REGISTRAR, aceptas las <a class="agree" href="#">Condiciones de uso y la Política de privacidad</a> de Corporacion PJ.</h5>
                    </div>
                </div>
