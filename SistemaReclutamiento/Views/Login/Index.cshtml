
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@{
    String usuario = new JavaScriptSerializer().Serialize(ViewBag.Usuario);
}
<script type="text/javascript">
    usuario= (@Html.Raw(usuario));
</script>
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <a class="hiddenanchor" id="email_send"></a>

    <div class="container" style="margin-top: 0px">
        <div class="page-header" align="center">
            <h1>Portal Laboral Corporacion PJ</h1>
        </div>
        <div align="center">
            <img src="~/images/pj.png" alt="" style="width: 75px; height:75px;">
        </div>
    </div>
    <div class="login_wrapper" style="margin-top: 0px;">
        <!--Formulario de acceso al Sistema-->
        <div class="animate form login_form">
            <section class="login_content" style="padding-top:0px;">

                <form id="frmLogin">
                    <h1>Acceso</h1>
                    <div>
                        <input type="hidden" name="usu_clave_temp" id="usu_clave_temp" />
                    </div>
                    <div>
                        <input type="text" name="usu_login" id="usu_login" class="form-control" placeholder="Email" />
                    </div>
                    <div>
                        <input type="password" name="usu_password" id="usu_password" class="form-control" placeholder="Contraseña" />
                    </div>
                    <div>
                        <button type="button" id="btnSesion" class="btn btn-default submit">Iniciar Sesión</button>
                        @*<a class="btn btn-default submit" href="index.html">INICIAR SESION</a>*@
                        <a class="reset_pass change_link" href="#email_send">Olvido su contraseña?</a>
                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <p class="change_link">
                            No esta Registrado?
                            <a href="#signup" class="to_register"> REGISTRESE AQUI! </a>
                        </p>

                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <p>©@DateTime.Now.Year Corporacion PJ</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <!--Formulario de registro de Usuario-->
        <div class="animate form registration_form">
            <section class="login_content">
                <form id="frmNuevo">
                    <h1>Registro</h1>
                    <div>
                        <input type="text" class="form-control" placeholder="Nombre" name="per_nombre" id="per_nombre" />
                    </div>
                    <div>
                        <input type="text" class="form-control" placeholder="Apellido Paterno" name="per_apellido_pat" id="per_apellido_pat" />
                    </div>
                    <div>
                        <input type="text" class="form-control" placeholder="Apellido Materno" name="per_apellido_mat" id="per_apellido_mat" />
                    </div>
                    <div>
                        <input type="email" class="form-control" placeholder="Email" name="per_correoelectronico" id="per_correoelectronico" />
                    </div>

                    <div class="form-group">
                        <select class="form-control" name="per_tipodoc" id="cbotipoDocumento">
                            <option value=""> Tipo de Documento</option>
                            <option value="DNI">DNI</option>
                            <option value="Carné de Extranjeria">Carné de Extranjeria</option>
                            <option value="Otros">Otros</option>

                        </select>
                    </div>

                    <div>
                        <input type="text" class="form-control" placeholder="Nro. de Documento" name="per_numdoc" id="per_numdoc" disabled="disabled" />
                    </div>
                    @*<div>
                        <input type="password" class="form-control" placeholder="Contraseña" name="usu_contrasenia" id="usu_contrasenia" />
                    </div>*@
                    <div>
                        <h6>Al hacer clic en REGISTRAR, aceptas las <a href="">Condiciones de uso y la Política de privacidad</a> de Corporacion PJ.</h6>
                    </div>
                    <div>
                        <button type="button" id="btnGuardar" class="btn btn-default submit">REGISTRARSE</button>
                        @*<a class="btn btn-default submit" href="index.html">REGISTRAR</a>*@
                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <p class="change_link">
                            Ya tiene una cuenta?
                            <a href="#signin" class="to_register"> ACCEDER </a>
                        </p>

                        <div class="clearfix"></div>
                        <br />

                        <div>

                            <p>©@DateTime.Now.Year Corporacion PJ</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>

        <!--Formulario de envio de contraseña-->
        <div id="send_email" class="animate form send_email_form">
            <section class="login_content">
                <form>
                    <h1>Recuperar Cuenta</h1>
                    <div class="clearfix">
                    </div>
                    <div>
                        <p>Se le enviara una contraseña al correo que uso para su registro</p>
                    </div>
                    <div>
                        <input type="email" class="form-control" placeholder="Email" required="" />
                    </div>

                    <div>
                        <a class="btn btn-default submit" href="index.html">ENVIAR</a>
                        <a href="#signin" class="btn btn-default">CANCELAR</a>


                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <div class="clearfix"></div>

                        <br />
                        <div>
                            <p>©@DateTime.Now.Year Corporacion PJ</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>


    </div>
</div>
@section js
{
    <script src="~/Content/viewjs/Login/LoginJs.js"></script>
}