    <script>
        $("#btnCerrarSesion").click(function () {
            $.ajax({
                type: 'POST',
                url: basePath + "/Login/CerrarSesionLoginJson",
                success: function (response) {
                    var resp = response.respuesta;
                    var msj = response.mensaje;
                    if (resp) {
                        window.location.replace("/");
                    } else {
                        alert(msj);
                    }
                }
