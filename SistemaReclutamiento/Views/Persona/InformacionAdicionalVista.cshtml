
@{
    ViewBag.Title = "Perfil - Informacion Adicional";
}

@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@using SistemaReclutamiento.Utilitarios;

@{
    String persona = new JavaScriptSerializer().Serialize(Session["per_full"]);
    String postulante = new JavaScriptSerializer().Serialize(Session["postulante"]);
    String usuario = new JavaScriptSerializer().Serialize(Session["usu_full"]);
    String rutaImage = new JavaScriptSerializer().Serialize(Session["rutaPerfil"]);

}
@{
    var jss = new System.Web.Script.Serialization.JavaScriptSerializer();
    jss.MaxJsonLength = Int32.MaxValue;
    String rutaCV = jss.Serialize(Session["rutaCv"]);
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <div class="" role="tabpanel">
                <ul id="datosPersonales_ul" class="nav nav-tabs bar_tabs hidden-xs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#EducacionBasica_tab" role="tab" data-toggle="tab" aria-expanded="true">Informacion Adicional</a>
                    </li>
                    <li class="pull-right">
                        <button type="button" class="btn btn-danger btn_guardar"><i class="fa fa-save"></i> Guardar</button>
                        <button class="btn btn-primary btn_cancelar" type="button"><i class="fa fa-ban"></i> Cancelar</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade active in" id="EducacionBasica_tab" aria-labelledby="EducacionBasica_tab">

                        <div class="col-md-3 col-sm-12 col-xs-12 profile_left">
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <div class="imagen-para-perfil img_postulante">
                                        <label for="subir-img-perfil" style="width: 100%;">
                                            <img id="perfil_principal" class="img-responsive avatar-view" style="width:100%;height:225px;" alt="Avatar" title="Imagen Postulante">
                                        </label>
                                        <input id="subir-img-perfil" type="file" style="display:none;" />
                                    </div>
                                </div>
                            </div>
                            <h3 style="margin-top: 2px;margin-bottom: 2px;" id="persona_nombre">Richard Lee</h3>
                        </div>

                        <form id="frmInformacionAdicional-form" class="" method="post">
                            <div class="col-md-9 col-xs-12" style="padding-top:10px;">
                                <div class="col-md-12 col-sm-12 col-xs-12 visible-xs" style="margin-bottom:10px;">
                                    <div class="col-xs-6">
                                        <button type="button" class="btn btn-danger col-xs-12 btn_guardar"><i class="fa fa-save"></i> Guardar</button>
                                    </div>
                                    <div class="col-xs-6">
                                        <button type="button" class="btn btn-primary col-xs-12 btn_cancelar"><i class="fa fa-ban"></i> Cancelar</button>
                                    </div>
                                </div>

                                <input type="hidden" name="per_id" id="per_id" />
                                <input type="hidden" name="pos_id" id="pos_id" />
                                <input type="hidden" name="fk_postulante" id="fk_postulante" />

                                <div class="col-md-4 col-xs-12">
                                    <div class="form-group">
                                        <label>Es Referido?</label>
                                        <div class="form-check pl-0">
                                            <input type="checkbox" name="cboReferido" id="cboReferido" checked data-height="30" data-toggle="toggle" data-on="Si" data-off="No" data-onstyle="primary" data-offstyle="danger">
                                        </div>
                                        <input type="hidden" name="pos_referido" id="pos_referido" />
                                    </div>
                                </div>

                                <div class="col-md-8 col-xs-12">
                                    <div class="form-group">
                                        <label>Nombre de referido</label>
                                        <input type="text" name="pos_nombre_referido" id="pos_nombre_referido" class="form-control" placeholder="" />
                                    </div>
                                </div>

                                <div class="col-md-4 col-xs-12">
                                    <div class="form-group">
                                        <label>Adjuntar Curriculum</label>
                                        <input id="pos_cv" name="pos_cv" type="file" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <a id="frm_cv"  href="#" target="_blank" style="width:100%" >Documento word</a>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Final-->
@section js
{
    <script type="text/javascript">
        persona = (@Html.Raw(persona));
        postulante = (@Html.Raw(postulante));
        usuario = (@Html.Raw(usuario));
        rutaImage = (@Html.Raw(rutaImage));
        rutaCV = (@Html.Raw(rutaCV));
    </script>
    <script src="~/Content/viewjs/Persona/InformacionAdicionalVista.js"></script>
}


